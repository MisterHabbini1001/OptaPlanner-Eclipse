    public HardSoftScore testgetMixedDurationPenaltyAsScore() 
    {
        return HardSoftScore.ofSoft(mixedDurationPenalty);
    }

    @ConstraintWeight("frontLoad")
    @Test
    public HardSoftScore testgetFrontLoadPenaltyAsScore() 
    {
        return HardSoftScore.ofSoft(frontLoadPenalty);
    }

    @Test
    public int testgetTwoInARowPenalty() 
    {
        return twoInARowPenalty;
    }

