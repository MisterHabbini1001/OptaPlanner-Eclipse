	@Test
    public int missingSpeakerRequiredTimeslotTagCount() 
	{
        if (timeslot == null) 
        {
            return 0;
        }
        
        return (int) speakerList.stream().flatMap(speaker -> speaker.getRequiredTimeslotTagSet().stream())
                .filter(tag -> !timeslot.hasTag(tag)).count();
    }

	@Test
